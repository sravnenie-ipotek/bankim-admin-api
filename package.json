{
  "name": "bankim-management-portal",
  "version": "1.0.0",
  "private": true,
  "description": "BankIM Management Portal - Monorepo with client, server, and shared packages",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "push:all": "./scripts/push-4repos.sh",
    "push:workspace": "./scripts/push-workspace.sh",
    "push:dashboard": "./scripts/push-dashboard.sh",
    "push:api": "./scripts/push-api.sh",
    "push:shared": "./scripts/push-shared.sh",
    "push:dry-run": "./scripts/push-4repos.sh --dry-run",
    "sync": "./scripts/push-4repos.sh -m 'Automated sync'",
    "deploy:all": "npm run build && npm run push:all"
  },
  "devDependencies": {
    "turbo": "^1.11.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "author": "BankIM Development Team",
  "license": "MIT"
}
